<Tabs
  block={true}
  defaultValue="<%= strategies.first.name.parameterize %>"
  values={<%= strategies.collect { |strategy| {label: "As a #{strategy.title}", value: strategy.name.parameterize } }.to_json %>}>
<%- strategies.each do |strategy| -%>
<%- source = metadata.sources.send(strategy.source) -%>
<TabItem value="<%= strategy.name.parameterize %>">

<%= deployment_strategy(strategy, platform: platform) %>

---

<Tabs
  centered={true}
  className="rounded"
  defaultValue="<%= interfaces.first.name %>"
  values={<%= interfaces.collect { |interface| {label: interface.title, value: interface.name } }.to_json %>}>
<%- interfaces.each do |interface| -%>
<TabItem value="<%= interface.name %>">

<%= interface_tutorial(interface, source: source, heading_depth: heading_depth) %>

</TabItem>
<%- end -%>
</Tabs>
</TabItem>
<%- end -%>
</Tabs>
